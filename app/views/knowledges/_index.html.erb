  <% knowledges.each do |knowledge| %>
    <div>
      <%= knowledge.content %>
      <br>
      <%= knowledge.status %>
      <p>コメント数表示</p>
      <!--いいねボタン・数表示-->
      <% if knowledge.favorited_by?(current_user) %>
        <%= link_to group_phrase_knowledge_favorites_path(phrase_id: knowledge.phrase_id, knowledge_id: knowledge.id), method: :delete do %>
          <i class="fas fa-heart"></i><%= knowledge.favorites.count %>
        <% end %>
      <% else %>
        <%= link_to group_phrase_knowledge_favorites_path(phrase_id: knowledge.phrase_id, knowledge_id: knowledge.id), method: :post do %>
          <i class="far fa-heart"></i><%= knowledge.favorites.count %>
        <% end %>
      <% end %>
      <%= link_to "details", group_phrase_knowledge_path(phrase_id: knowledge.phrase.id, id: knowledge.id) %>
      <% if knowledge.user_id == current_user.id %>
        <%= link_to "edit", edit_group_phrase_knowledge_path(phrase_id: knowledge.phrase_id, id: knowledge.id), class: 'btn btn-success' %>
        <%= link_to "delete", group_phrase_knowledge_path(phrase_id: knowledge.phrase_id, id: knowledge.id), method: :delete, class: 'btn btn-danger' %>
      <% end %>
    </div>
  <% end %>
