<%= form_with url: group_phrase_knowledges_path(phrase_id: phrase.id), method: :post, local:true do |f| %>
  <%= render 'layouts/errors', model: knowledge %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <p>Genre</p>
    <%= f.select :status, Knowledge.statuses.keys.to_a %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>