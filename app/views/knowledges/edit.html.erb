<div class="container my-3">
  <h2>Knowledge Edit</h2>
  <%= form_with url: group_phrase_knowledge_path(@group, @knowledge), method: :patch, local:true do |f| %>
    <%= render 'layouts/errors', model: @knowledge %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control', value: @content %>
    </div>
    <div class="form-group">
      <p>Genre</p>
      <%= f.select :status, Knowledge.statuses.keys.to_a, selected: @genre %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  <% end %>
</div>