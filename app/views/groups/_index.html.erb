<div class="table-responsive">
  <table class="my-3 table-hover text-nowrap center">
    <thead>
      <tr>
        <th>Name</th>
        <th>Introduction</th>
        <th>Details</th>
      </tr>
    </thead>
    
    <tbody>
      <% groups.each do |group| %>
        <tr>
          <td>
            <!--ログイン中のユーザーがグループに所属しているなら、グループのフレーズ一覧へのリンクにする-->
            <% if GroupUser.exists?(group_id: group.id, user_id: current_user.id) %>
              <%= link_to group_phrases_path(group.id) do %>
                <%= attachment_image_tag group, :image, format: 'jpeg', fallback: 'no_image.jpg', size: "60x60"%>
                <%= group.name %>
              <% end %>
            <% else %>
                <%= attachment_image_tag group, :image, format: 'jpeg', fallback: 'no_image.jpg', size: "60x60"%>
                <%= group.name %>
            <% end %>
          </td>
          <td>
            <%= group.introduction.truncate(30) %>
          </td>
          <td>
            <%= link_to group_path(group.id) do %>
            <span>Details</span>
            <% end %>
          </td>
          <td>
            <% if group.leader_id == current_user.id %>
              <%= link_to "Edit", edit_group_path(group.id), class: 'btn btn-primary' %>
            <% else %>
              <!--退出のリンクへ飛ぶためにIDを定義-->
              <% if GroupUser.exists?(group_id: group.id, user_id: current_user.id) %>
                <% group_user = GroupUser.find_by(group_id: group.id, user_id: current_user.id) %>
                <% id = group_user.id %>
              <% end %>

              <% if GroupUser.exists?(group_id: group.id, user_id: current_user.id) %>
                <%= link_to "退出する", group_user_path(id: id, group_id: group.id), method: :delete, class: 'btn btn-danger' %>
              <% end %>
            <% end %>
          </td>
          <% if group.leader_id == current_user.id %>
            <td>
              <%= link_to "Delete", group_path(id: group.id), method: :delete, class: 'btn btn-danger' %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate groups %>