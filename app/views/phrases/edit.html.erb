<div class="container my-3">
  <h2>Phrase Edit</h2>
  <%= form_with url: group_phrase_path(@group, @phrase), method: :patch, local:true do |f| %>
    <%= render 'layouts/errors', model: @phrase %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control', value: @content %>
    </div>
    <div class="form-group">
      <%= f.label :japanese %>
      <%= f.text_field :japanese, class: 'form-control', value: @japanese %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  <% end %>
</div>