<% knowledges.each do |knowledge| %>
  <div class="container border post py-2 pl-4 my-3">
    <%= knowledge.content %>
    <div class="border-top">
      <%= knowledge.status %>
      <span> コメント<%= knowledge.comments.count %>件</span>
      <!--いいね数表示-->
      <i class="fas fa-heart text-danger"><%= knowledge.favorites.count %></i>

      <%= link_to "Details", admin_group_phrase_knowledge_path(phrase_id: knowledge.phrase.id, id: knowledge.id) %>
      <br>
      <%= link_to "Delete", admin_group_phrase_knowledge_path(phrase_id: knowledge.phrase_id, id: knowledge.id), method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>

<%= paginate knowledges %>
