<% @phrases.each do |phrase| %>
  <div>
    <%= link_to admin_user_path(phrase.user) do %>
      <%= attachment_image_tag phrase.user, :image, format: 'jpeg', fallback: 'no_image.jpg', size: "40x40" %>
      <%= phrase.user.name %>
    <% end %>
    <%= phrase.content %>
    <%= phrase.japanese %>
    <%= link_to "details", admin_group_phrase_path(group_id: phrase.group_id, id: phrase.id) %>
    <%= link_to "delete", group_phrase_path(group_id: phrase.group_id, id: phrase.id), method: :delete, class: 'btn btn-danger' %>
  </div>
<% end %>