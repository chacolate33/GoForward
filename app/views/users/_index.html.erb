<div class="table-responsive">
  <table class="table-hover text-nowrap center">
    <thead>
      <tr>
        <th>Name</th>
        <th>Follows</th>
        <th>Followers</th>
        <th>Introduction</th>
        <th>Follow/Unfollow</th>
        <th>Status</th>
      </tr>
    </thead>
    
    <tbody>
      <% users.each do |user|%>
        <tr>
          <td>
            <%= link_to user_path(user.id) do %>
              <%= attachment_image_tag user, :image, format: 'jpeg', fallback: 'no_image.jpg', size: "60x60"%>
              <%= user.name %>
            <% end %>
          </td>
          <td>
            Follows: <%= link_to user_followings_path(user.id) do %><%= user.followings.count %><% end %>
          </td>
          <td>
            Followers: <%= link_to user_followers_path(user.id) do %><%= user.followers.count %><% end %>
          </td>
          <td>
            <% if user.introduction.present? %>
              <%= user.introduction.truncate(30) %>
            <% end %>
          </td>
          <td class="text-center">
            <% if user != current_user %>
              <% if current_user.following?(user) %>
                <%= link_to "Unfolow", user_relationships_path(user.id), method: :delete, class: 'btn btn-danger' %>
              <% else %>
                <%= link_to "Follow", user_relationships_path(user.id), method: :post, class: 'btn btn-primary'%>
              <% end %>
            <% end %>
          </td>
          <td>
            <% if user.is_deleted == false %>
              <p class="fas fa-user-check text-success">有効</p>
            <% else %>
              <p class="fas fa-user-check text-danger">退会</p>
            <% end %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate users %>