<table>
  <% phrases.each do |phrase| %>
    <tr>
      <td>
        <%= link_to group_phrase_path(group_id: phrase.group.id, id: phrase.id ) do %>
          <%= phrase.content %>
          <%= phrase.japanese %>
        <% end %>
      </td>
      <td>
         <!--ブックマーク-->
        <% if phrase.bookmarked_by?(current_user) %>
          <%= link_to group_phrase_bookmarks_path(group_id: phrase.group.id, phrase_id: phrase.id), method: :delete do %>
            <i class="fas fa-star"></i>            
          <% end %>
        <% else %>
          <%= link_to group_phrase_bookmarks_path(group_id: phrase.group.id, phrase_id: phrase.id), method: :post do %>
            <i class="far fa-star"></i>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>